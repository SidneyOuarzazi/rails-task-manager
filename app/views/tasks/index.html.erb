<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <ul>
    <li>
      <%= link_to task.title, "tasks/#{task.id}" %>
      <%# <%= task.completed ? 'fait':'à faire' %>
      <input type="checkbox" disabled=true <%=task.completed ? 'checked':''%>>
      <%= link_to 'Supprimer', task_path(task), method: :delete, data: { confirm: "Merci de confirmer la suppression" } %>
        <%# <i class="fa-solid fa-trash-can"></i> %>
    </li>
  </ul>
<% end %>
<%= link_to 'Ajouter une tâche', new_task_path %>
